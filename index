        }
        .question {
            font-size: 22px;
            color: #2d3748;
            margin: 30px 0;
            font-weight: 600;
        }
        .option {
            display: block;
            width: 100%;
            padding: 16px;
            margin: 12px 0;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            background: white;
            cursor: pointer;
            font-size: 16px;
            text-align: left;
            transition: all 0.2s;
        }
        .option:hover:not(.correct):not(.wrong):not(:disabled) {
            border-color: #667eea;
            background: #f7fafc;
        }
        .option.correct {
            border-color: #48bb78;
            background: #f0fff4;
            color: #22543d;
        }
        .option.wrong {
            border-color: #f56565;
            background: #fff5f5;
            color: #742a2a;
        }
        .option:disabled {
            cursor: not-allowed;
            opacity: 0.6;
        }
        .feedback {
            margin: 20px 0;
